{% extends 'base_User.html.twig' %}

{% block title %}wishlist
{% endblock %}

{% block body %}
	<section class="container my-5">
		<h2 class="mb-4">Wish List Courses</h2>
		<div class="row">
			{% if wishlist is empty %}
				<p>You have no items in your wishlist.</p>
			{% else %}
				{% for wish in wishlist %}
					<div class="col-md-4 d-flex align-items-stretch">
						<div class="card mb-4">
							<img src="{{ asset(wish.cours.image) }}" class="card-img-top" alt="Course Image" style="width: 100%; height: 200px; object-fit: cover;">
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">{{ wish.cours.title }}</h5>
								<p class="card-text">{{ wish.cours.description|slice(0, 50) ~ '...' }}</p>
								<div class="mt-auto d-flex justify-content-between align-items-center">
									<span class="text-muted">${{ wish.cours.price }}</span>
									<div>
										<a href="{{ path('course_delete_wish_list', {id: wish.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</section>
{% endblock %}
