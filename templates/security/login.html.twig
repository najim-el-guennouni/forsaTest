{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block body %}
<style>
body{
    background-color: #041228
}
</style>
	<div class="container d-flex justify-content-center align-items-center min-vh-100">
		<div class="row w-100">
			<div class="col-md-6 mt-5">
				<div class="card p-5 shadow-lg">
					<h1 class="text-start mb-4 mt-5 fw-bold">SIGN IN</h1>

					{% if error %}
						<div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<form method="post">
						<div class="mb-3">
							<label for="inputEmail" class="form-label">E-mail</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>

						<div class="mb-3">
							<label for="inputPassword" class="form-label">Password</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{# <div class="mb-3 form-check">
						                            <input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMeCheck">
						                            <label class="form-check-label" for="rememberMeCheck">
						                                Remember me
						                            </label>
						                        </div> #}

						<div class="d-flex justify-content-between align-items-center mb-5">
							<a href="{{path('app_register')}}" class="text-muted">Canâ€™t sign in?</a>
							<button class="btn btn-primary btn-lg" type="submit">Sign in</button>
						</div>
					</form>
				</div>
			</div>

			<!-- Image Column -->
			<div class="col-md-6 d-none d-md-flex justify-content-center align-items-center flex-column">
				<img src="{{ asset('images/logo.png') }}" alt="Logo" class="img-fluid m-5" style="width: 50%; height: 20%;">
				<img src="{{ asset('images/user1.png') }}" alt="User Image" class="img-fluid" style="width: 100%; height:1000%;">
			</div>
		</div>
	</div>
{% endblock %}
